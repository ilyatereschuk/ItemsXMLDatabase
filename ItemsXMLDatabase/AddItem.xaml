<Window x:Class="ItemsXMLDatabase.AddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Обьект" Height="206" Width="348">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Height="Auto" HorizontalAlignment="Left" Margin="10,15,0,0" Text="Идентификатор" VerticalAlignment="Top" Width="95" />
        <TextBox Grid.Column="1" Height="21" HorizontalAlignment="Left" Margin="3,12,0,0" Name="txtID" VerticalAlignment="Top" Width="202" />
        <Button Name="btnAdd" Click="btnAdd_Click" Content="Добавить" Grid.Row="2" Margin="10" />
        <Button Name="btnCancel" Click="btnCancel_Click" Content="Отмена" Grid.Column="1" Grid.Row="2" Margin="10" />

        <TextBlock Grid.Row="1" Height="Auto" HorizontalAlignment="Left" Margin="10,15,0,0" Text="Название" VerticalAlignment="Top" Width="55" />
        <TextBox Grid.Row="1" Grid.Column="1" Height="21" HorizontalAlignment="Left" Margin="3,12,0,0" Name="txtName" VerticalAlignment="Top" Width="202" />

    </Grid>
</Window>
