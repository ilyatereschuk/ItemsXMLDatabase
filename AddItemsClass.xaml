<Window x:Class="ItemsXMLDatabase.AddItemsClass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Категория" Height="128" Width="270">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Height="Auto" HorizontalAlignment="Left" Margin="10,15,0,0" Name="textBlock1" Text="Название" VerticalAlignment="Top" Width="55" />
        <TextBox Grid.Column="1" Height="21" HorizontalAlignment="Left" Margin="3,12,0,0" Name="textBox1" VerticalAlignment="Top" Width="153" />
        <Button Name="btnAdd" Click="btnAdd_Click" Content="Добавить" Grid.Row="1" Margin="10" />
        <Button Name="btnCancel" Click="btnCancel_Click" Content="Отмена" Grid.Column="1" Grid.Row="1" Margin="10" />
    </Grid>
</Window>
